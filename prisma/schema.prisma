generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(uuid())
  email        String           @unique
  passwordHash String           @map("password_hash")
  createdAt    DateTime         @default(now()) @map("created_at")
  transactions Transaction[]
  snapshots    InsightSnapshot[]

  @@map("users")
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  amount      Decimal  @db.Decimal(12, 2)
  category    String
  emotion     String
  impulseFlag Boolean  @default(false) @map("impulse_flag")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("transactions")
}

model InsightSnapshot {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  stabilityScore   Int      @map("stability_score")
  emotionalIndex   Int      @map("emotional_index")
  savingsMomentum  Int      @map("savings_momentum")
  financeScore     Int      @map("finance_score")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("insight_snapshots")
}
